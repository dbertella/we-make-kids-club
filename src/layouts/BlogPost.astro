---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = { data: { news: CollectionEntry<"news">["data"] } };

const { seoTitle, seoDescription, heroImage } = Astro.props.data.news;
---

<html lang="en">
  <head>
    <BaseHead title={seoTitle} description={seoDescription} image={heroImage} />

    <script
      is:inline
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-9ZXTMEP7KZ"></script>

    <script is:inline type="text/partytown">
      document.addEventListener("astro:page-load", () => {
        window.dataLayer = window.dataLayer || [];
        function gtag() {
          dataLayer.push(arguments);
        }
        gtag("js", new Date());

        gtag("consent", "default", {
          ad_storage: "denied",
          ad_user_data: "denied",
          ad_personalization: "denied",
          analytics_storage: "denied",
        });

        gtag("config", "G-9ZXTMEP7KZ");
      });
    </script>
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
